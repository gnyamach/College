<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Room Number</th>
      <th>Semester</th>
      <th>Section Number</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @professor.sections.each do |section| %>
    <tr>
        <td><%= section.course.name %></td>
        <td><%= section.room %></td>
        <td><%= section.semester %></td>
        <td><%= section.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>
